<h1>My passengers</h1>
<%= link_to "Add a new passenger!", new_passenger_path %>

<style>
    table, th, td {
        border: 2px solid white;
    }

    th, td {
        background-color: #DCDCDC;
    }
</style>
<table class="table">
  <tr>
    <th scope="col">Passenger first name</th>
    <th scope="col">Passenger last name</th>
    <th scope="col">Birthdate</th>
    <th scope="col">Passport ID</th>
    <th scope="col">Citizenship</th>
  </tr>
  <% @passengers.each do |passenger| %>
    <tr>
      <td><%= link_to passenger.first_name, passenger %></td>
      <td><%= passenger.last_name %></td>
      <td><%= passenger.birth_date %></td>
      <td><%= passenger.passport_id %></td>
      <td><%= passenger.citizenship %></td>
    </tr>
  <% end %>
</table>

