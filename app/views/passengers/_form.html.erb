<div class="row">
  <div class="col-xs-12">
    <%= form_for(@passenger, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= form.label :first_name %>
        </div>
        <div class="col-sm-3">
          <%= form.text_field :first_name, class: "form-control", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= form.label :last_name %>
        </div>
        <div class="col-sm-3">
          <%= form.text_field :last_name, rows: 10, class: "form-control", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= form.label :birth_date %>
        </div>
        <div class="col-sm-3">
          <%= form.date_field :birth_date, rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= form.label :passport_id %>
        </div>
        <div class="col-sm-3">
          <%= form.text_field :passport_id, rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= form.label :citizenship %>
        </div>
        <div class="col-sm-3">
          <%= form.text_field :citizenship, rows: 10, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= form.submit class: 'btn btn-primary btn-large' %>
        </div>
      </div>
    <% end %>
  </div>
</div>