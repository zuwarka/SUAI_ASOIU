<h1>Table of positions</h1>

<%#= link_to "Add new room", new_admin_room_path %>
<style>
    table, th, td {
        border: 2px solid white;
    }

    th, td {
        background-color: #DCDCDC;
    }
</style>
<table class="table">
  <tr>
    <th scope="col">ID Position</th>
    <th scope="col">Name of position</th>
  </tr>
  <% @positions.each do |position| %>
    <tr>
      <td><%= position.id %></td>
      <td><%= position.name_position %></td>
    </tr>
  <% end %>
</table>